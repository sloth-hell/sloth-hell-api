root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 120

[*.bat]
end_of_line = crlf

[*.{groovy,java,kt,kts,xml}]
indent_style = tab

[*.kt]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_style = space
trim_trailing_whitespace = false